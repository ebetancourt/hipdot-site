<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title }} - HipDot Media</title>
    <meta name="description" content="{{ description }}" />

    <!-- Dark mode detection (runs before render to prevent flash) -->
    <script>
      (function() {
        var theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>

    <!-- Favicon -->
    <link rel="icon" href="{{ site.pathPrefix }}/assets/img/favicon.png" />

    <!-- Icon Font -->
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/fonts/iconfonts/font-awesome/stylesheet.css" />
    <!-- Site fonts -->
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/fonts/webfonts/inter/stylesheet.css" />
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/fonts/webfonts/syne/stylesheet.css" />

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/css/vendors/swiper-bundle.min.css" />
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/css/vendors/jos.css" />
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/css/vendors/menu.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ site.pathPrefix }}/assets/css/custom.css" />

    <!-- Tailwind CSS -->
    <link href="{{ site.pathPrefix }}/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrapper relative z-[1] bg-white dark:bg-dark">
        {{ content | safe }}
    </div>

    <!-- Theme Toggle -->
    <button
      id="theme-toggle"
      type="button"
      aria-label="Toggle dark mode"
      class="fixed bottom-6 right-6 z-50 flex h-12 w-12 items-center justify-center rounded-full bg-black text-white shadow-lg transition-all duration-300 hover:scale-110 dark:bg-white dark:text-black"
    >
      <i class="fa-solid fa-moon dark:hidden"></i>
      <i class="fa-solid fa-sun hidden dark:inline"></i>
    </button>

    <!-- Vendor Scripts -->
    <script src="{{ site.pathPrefix }}/assets/js/vendors/counterup.js" type="module"></script>
    <script src="{{ site.pathPrefix }}/assets/js/vendors/swiper-bundle.min.js"></script>
    <script src="{{ site.pathPrefix }}/assets/js/vendors/fslightbox.js"></script>
    <script src="{{ site.pathPrefix }}/assets/js/vendors/jos.min.js"></script>
    <script src="{{ site.pathPrefix }}/assets/js/vendors/menu.js"></script>
    <script src="{{ site.pathPrefix }}/assets/js/main.js"></script>

    <!-- Theme Toggle Script -->
    <script>
      document.getElementById('theme-toggle').addEventListener('click', function() {
        var html = document.documentElement;
        html.classList.toggle('dark');
        localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
      });
    </script>
</body>
</html>
